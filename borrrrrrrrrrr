<?php
/**
 * My Account dashboard
 *
 * This template can be overridden by copying it to yourtheme/woocommerce/myaccount/dashboard.php.
 *
 * @see     https://woocommerce.com/document/template-structure/
 * @package WooCommerce\Templates
 * @version 3.5.0
 */

defined('ABSPATH') || exit;

// Obtén el usuario actual
$current_user = wp_get_current_user();

// Verifica si el usuario está definido y es un objeto
if ($current_user instanceof WP_User) {
    $display_name = $current_user->display_name;
} else {
    $display_name = 'Usuario'; // Valor por defecto si el usuario no está definido
}
?>

<p><?php echo sprintf(__('Hola %s', 'woocommerce'), esc_html($display_name)); ?> (¿no sos <a href="<?php echo esc_url(wp_logout_url()); ?>">Cerrar sesión</a>)</p>

<p><?php _e('Desde el panel de control de tu cuenta podés ver tus pedidos recientes, gestionar tus direcciones de envío y facturación y editar tu contraseña y los detalles de tu cuenta.', 'woocommerce'); ?></p>
